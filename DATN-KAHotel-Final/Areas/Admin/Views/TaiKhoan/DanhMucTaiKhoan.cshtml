@using X.PagedList.Mvc.Core
@using DATN_KAHotel_Final.Models
@model X.PagedList.IPagedList<TaiKhoan>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhMucTaiKhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    td a {
        font-size: 20px;
    }

    .pagination {
        display: flex;
        justify-content: center;
        padding-top: 16px;
    }

    ul {
        list-style-type: none;
    }

    /* Định dạng cho bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        font-family: monospace;
    }

    /* Định dạng cho các ô */
    .table, th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid black;
        text-align: center;
    }

        /* Định dạng cho dòng chẵn */
        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        /* Định dạng khi di chuột qua */
        .table tr:hover {
            background-color: #ddd;
        }

    /* Định dạng cho dropdown select */
    .trangThaiSelect {
        padding: 8px;
        border-radius: 4px;
    }

    table p {
        margin-top: 16px !important;
        text-align: center;
    }
</style>


<h1>Danh mục tài khoản</h1>

<p>
    <a href="./create" class="btn btn-primary">Thêm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Tài khoản
            </th>
            @*<th>
                Họ tên
            </th>*@
            <th>
                Ngày sinh
            </th>
            <th>
                Số điện thoại
            </th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string cla = "table-success";
        }
        @foreach (var item in Model)
        {
            @if(item.IsDelete == false)
            {
                cla = "table-success";
                i += 1;
                if (i % 2 == 0)
                {
                    cla = "table-warning";
                }
                <tr class="@cla">
                    <td>
                        @i
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenDangNhap)
                    </td>
                    @*<td>
            @Html.DisplayFor(modelItem => item.HoTen)
            </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                    </td>
                    <td>
                        <a href="/admin/taikhoan/update?id=@item.Id"><i class="bx bx-edit"></i></a> |
                        <a href="/admin/taikhoan/delete?id=@item.Id"><i class="bx bx-trash"></i></a> |
                        <a href="/admin/taikhoan/phanquyentaikhoan?id=@item.Id"><i class="bx bx-user-plus"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    @if (Model.PageCount > 1)
    {
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=1">&laquo;</a>
            </li>
            <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                <a class="page-link" href="?page=@Model.PageCount">&raquo;</a>
            </li>
        </ul>
    }
</div>